<%- include('header'); -%>

<main>
	<div class="container">
		<% recipe.forEach(data => { %>
		<ul class="recipe">
			<li><img src="<%= data.image %>" alt="<%= data.name %>" class="recipe-img" /></li>
			<li>
				<h1><%= data.name %></h1>
			</li>

			<li>
				<a href="/<%= data.id %>">View Recipe &#x21DB;</a>
			</li>
		</ul>
		<% }) %>
	</div>
</main>
<%- include('footer'); -%>
