<%- include('header'); -%>

<main>
	<div class="container-recipe">
		<div><h1>Recipe</h1></div>
		<div class="recipe-content">
			<div><img src="<%= recipe.image %>" alt="<%= recipe.name %>" /></div>
			<div>
				<h2><%= recipe.name %></h2>

				<p class="recipe-description"><%= recipe.description %></p>
			</div>
		</div>
		<div class="recipe-edit-delete">
			<div>
				<form method="POST" action="/delete">
					<div>
						<input type="hidden" value="<%= recipe.id %>" name="recipeId" />
						<button>Delete</button>
					</div>
				</form>
			</div>
			<div>
				<a href="/edit-recipe/<%= recipe.id %>?edit=true">Edit</a>
			</div>
		</div>
	</div>
</main>
<%- include('footer'); -%>
